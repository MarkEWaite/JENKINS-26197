<?xml version="1.0"?>
<project name="JENKINS-26197" default="version" basedir=".">
  <!-- Adapted from https://gist.github.com/davejlong/874521 -->

  <tstamp>
    <format property="date-time" pattern="MM/dd/yyyy hh:mm:ss aa"/>
    <format property="branch-time" pattern="MM-dd-yyyy-hh-mm-ss-aa"/>
  </tstamp>

  <property name="branch-name-prefix" value="branch"/>
  <property name="branch-name" value="${branch-name-prefix}-${branch-time}"/>

  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

  <target name="remove-a-non-master-branch">
    <exec executable="git">
      <arg value="ls-remote" />
      <arg value="--heads" />
      <arg value="origin" />
      <arg value="${branch-name-prefix}*" />
    </exec>
  </target>

  <target name="version" description="Commits to git branch and pushes the branch">
    <property name="commit-message" value="changes at ${date-time}" />

    <echo message="Commited ${commit-message}" />
    <git command="checkout">
      <args>
        <arg value="-b" />
        <arg value="${branch-name}" />
        <arg value="origin/master" />
      </args>
    </git>
    <echo file="${branch-name}" message="This file is on a branch named ${branch-name}"/>
    <git command="add">
      <args>
        <arg value="." />
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-a" />
        <arg value="-m" />
        <arg value="${commit-message}" />
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="origin" />
        <arg value="--set-upstream" />
        <arg value="${branch-name}" />
      </args>
    </git>
  </target>
</project>
