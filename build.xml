<project name="JENKINS-32577" default="info" basedir=".">

  <property environment="env"/>

  <target name="info" description="Report environment information">
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="Increment build number from ant script - was ${build.number}"/>
      <arg value="build.number"/>
    </exec>
    <echo>java version is ${java.version}</echo>
    <echo>java runtime version is ${java.runtime.version}</echo>
    <echo>build file is ${ant.file}</echo>
    <echo>basedir is ${basedir}</echo>
    <echo>ant java version is ${ant.java.version}</echo>
    <echo>LANG=${env.LANG}</echo>
    <echo>LANGUAGE=${env.LANGUAGE}</echo>
    <echo>LC_ALL=${env.LC_ALL}</echo>
  </target>

</project>
